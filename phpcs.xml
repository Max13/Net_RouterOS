<?xml version="1.0"?>
<ruleset name="PEAR-favored">
    <description>All PEAR, PSR-2 and Zend coding standards, with this order of precedence in cases of conflicting rules. The PEAR comment alignment rule is also excluded, because it's too impractical.</description>
    <rule ref="PEAR">
        <exclude name="PEAR.Commenting.FunctionComment.ParamCommentAlignment" />
    </rule>
    <rule ref="PSR2">
        <exclude name="Generic.WhiteSpace.ScopeIndent.IncorrectExact" />
        <exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" />
        <exclude name="PSR2.ControlStructures.SwitchDeclaration"/>
        <exclude name="PSR2.Classes.PropertyDeclaration.Underscore" />
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore" />
    </rule>
    <rule ref="Zend">
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman.BraceOnSameLine" />
        <exclude name="Zend.NamingConventions.ValidVariableName.PrivateNoUnderscore"/>
    </rule>
</ruleset>